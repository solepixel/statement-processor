{
	"name": "briantics/statement-processor",
	"description": "WordPress plugin to upload and organize financial transaction files (PDF/CSV) by month/year and source, with CSV export.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Briantics, Inc.",
			"homepage": "https://b7s.co"
		}
	],
	"require": {
		"php": ">=7.4",
		"smalot/pdfparser": "^2.0",
		"wordpress/php-ai-client": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"StatementProcessor\\": "src/"
		},
		"classmap": [
			"src/"
		]
	},
	"config": {
		"optimize-autoloader": true,
		"allow-plugins": {
			"php-http/discovery": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.3"
	}
}
